<div class="ml-5 mt-3">
  <div class="my-3"><%= image_tag @archived_restaurant.image %></div>
  <div class="font-weight-bold">店名</div>
  <div><%= @archived_restaurant.name %></div>
  <br>
  <div class="font-weight-bold">カテゴリ</div>
  <div><%= @archived_restaurant.category %></div>
  <br>
  <div class="font-weight-bold">場所</div>
  <div><%= @archived_restaurant.place %></div>
  <br>
  <div class="font-weight-bold">予算</div>
  <div><%= @archived_restaurant.price %>円</div>
  <br>
  <div class="font-weight-bold">アクセス</div>
  <div><%= restaurant_access(@archived_restaurant) %></div>
  <br>
  <div class="font-weight-bold">営業時間</div>
  <div><%= @archived_restaurant.opentime %></div>
  <br>
  <div class="font-weight-bold">定休日</div>
  <div><%= @archived_restaurant.holiday %></div>
  <br>
  <div class="font-weight-bold">おすすめコース</div>
  <div><%= @archived_restaurant.recommended_menu %></div>
  <br>
  <div class="font-weight-bold">同行者</div>
  <div><%= @archived_restaurant.participant %></div>
  <br>
  <div class="font-weight-bold">コメント</div>
  <div><%= @archived_restaurant.comment %></div>
  <br>
  <div class="font-weight-bold">URL</div>
  <div><%= link_to "#{@archived_restaurant.url&.truncate(30)}", @archived_restaurant.url, target: '_blank' %></div>
</div>