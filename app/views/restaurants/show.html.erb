<div class="ml-5 mt-3">
  <div class="font-weight-bold">店名</div>
  <div><%= @restaurant.name %></div>
  <br>
  <div class="font-weight-bold">カテゴリ</div>
  <div><%= @restaurant.category %></div>
  <br>
  <div class="font-weight-bold">場所</div>
  <div><%= @restaurant.place %></div>
  <br>
  <div class="font-weight-bold">予算</div>
  <div><%= @restaurant.price %>円</div>
  <br>
  <div class="font-weight-bold">アクセス</div>
  <div><%= restaurant_access(@restaurant) %></div>
  <br>
  <div class="font-weight-bold">おすすめコース</div>
  <div><%= @restaurant.recommended_menu %></div>
  <br>
  <div class="font-weight-bold">同行者</div>
  <div><%= @restaurant.participant %></div>
  <br>
  <div class="font-weight-bold">コメント</div>
  <div><%= @restaurant.comment %></div>
  <br>
  <div class="font-weight-bold">URL</div>
  <div><%= link_to 'お店のURL', @restaurant.url, target: '_blank' %></div>
</div>