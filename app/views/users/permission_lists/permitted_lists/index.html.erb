<div class="mt-5">
  <% if @permitted_lists.present? %>
    <% @permitted_lists.each do |l| %>
      <%= link_to(is_archived?(l) ? archived_list_archived_restaurants_path(l) : list_restaurants_path(l), class: "text-dark") do %>
        <div class="card my-2" style="height: 80px;">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <div><%= l.title %></div>
              <small class="text-secondary">登録数:<%= is_archived?(l) ? l.archived_restaurants.length : l.restaurants.length %></small>
            </div>
            <div class="mr-5"><%= is_archived?(l) ? l.original_user_name : l.user.name %></div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <div class="text-center">許可されたリストはありません</div>
  <% end %>
</div>