<div class="mt-5">
  <% if @permitted_lists.present? %>
    <% @permitted_lists.each do |l| %>
      <%= link_to(is_archived?(l) ? archived_list_archived_restaurants_path(l) : list_restaurants_path(l), class: "text-dark") do %>
        <div class="card my-2">
          <div class="card-body row">
            <div class="col-8"><%= l.title %></div>
            <div class="col-4"><%= is_archived?(l) ? l.original_user_name : l.user.name %></div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <div class="text-center">許可されたリストはありません</div>
  <% end %>
</div>