<div class="mt-4">
  <div class="d-flex justify-content-between my-3">
    <div><%= current_user.name %>のMyリスト</div>
    <div><%= link_to '+リスト追加', new_user_list_path(current_user) %></div>  
  </div>
  <% if @lists.present? %>
    <% @lists.each do |l| %>
      <div class="card my-2">
        <div class="card-header d-flex justify-content-end align-items-center" style="height: 30px;">
          <%= link_to(edit_user_list_path(current_user, l), class: "mr-2") do %>
            <div class="ml-1 text-dark" style="font-size: 1.5rem"><%= fa_icon "edit" %></div>
          <% end %>
          <%= link_to(user_list_path(current_user, l), data: { confirm: "リスト内のお店も削除されます。本当によろしいですか?" }, method: :delete) do %>
            <div class="ml-2 text-dark" style="font-size: 1.4rem"><%= fa_icon "trash" %></div>
          <% end %>
        </div>
        <%= link_to(list_restaurants_path(l), class: "text-dark") do %>
          <div class="card-body row" style="height: 70px;">
            <div class="col-8"><%= l.title %></div>
            <div class="col-4" id="number">登録数:<%= l.restaurants.size %></div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center">Myリストがまだ追加されていません</div>
  <% end %>
</div>