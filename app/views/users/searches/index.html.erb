<%= form_with url: users_searches_path, method: :get, local: true, class: "mt-5" do |f| %>
  <%= f.label :name, '名前で検索' %>
  <div><%= f.text_field :name,  class: "w-100" %></div>
  <div class="mt-3 text-center"><%= f.submit '検索' %></div>
<% end %>
<div class="mt-5">
  <% if @searched_users.present? %>
    <% @searched_users.each do |u| %>
      <div class="text-center">
        <%= u.name %>
        <%= check_requested_user_status(current_user, u) %>
        <%#= link_to 'リクエスト', new_user_request_path(u) %>
      </div>
    <% end %>
  <% end %>
</div>